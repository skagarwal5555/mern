doctype html
html(lang='en')
 head
   link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'
    integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u' crossorigin='anonymous')
   style
      include ../public/stylesheets/style.css
 body
    script(src='https://code.jquery.com/jquery-3.2.1.min.js'
           integrity='sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4='
           crossorigin='anonymous')
           
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js'
           integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa' crossorigin='anonymous')
    h1 Add Product
    |
    |
    form(action="/products/Add" method="POST")
                     div
                                label(for='productId') Product ID:
                                |
                                |
                                input(type='text', placeholder='productId' name='productId')
                                if(errors)
                                    for error in errors
                                        if (error.param=='productId')
                                            p.validationError #{error.msg}
                     div
                                label(for='productName') Product Name:
                                |
                                |
                                input(type='text', placeholder='productName' name='productName')
                                if(errors)
                                    for error in errors
                                        if (error.param=='productName')
                                            p.validationError #{error.msg}
                     div
                                label(for='productDescription') Description:
                                |
                                |
                                input(type='text', placeholder='productDescription' name='productDescription')
                                if(errors)
                                    for error in errors
                                        if (error.param=='productDescription')
                                            p.validationError #{error.msg}
                     div
                                label(for='price') Price:
                                |
                                |
                                input(type='number', step="0.01", placeholder='price' name='price')
                                if(errors)
                                    for error in errors
                                        if (error.param=='price')
                                            p.validationError #{error.msg}
                     div 
                                button(type="submit", name="submitOrder", class="btn-primary") Add
                                |
                                |
                                if(msg)
                                    p.validationError #{msg}
                                |
                                |
                                if(msgSuccess)
                                    p.success #{msgSuccess}        